<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.enn.energy.price.dal.mapper.ext.proxyprice.CityWeatherExtMapper">
    <resultMap id="BaseResultMap" type="com.enn.energy.price.dal.po.mbg.CityWeather">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="area_code" jdbcType="VARCHAR" property="areaCode"/>
        <result column="date" jdbcType="DATE" property="date"/>
        <result column="temp_day" jdbcType="VARCHAR" property="tempDay"/>
        <result column="temp_night" jdbcType="VARCHAR" property="tempNight"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>
    <sql id="Base_Column_List">
        id
        , area_code, date, temp_day, temp_night, create_time, update_time
    </sql>

    <insert id="batchInsertOrUpdate" parameterType="com.enn.energy.price.dal.po.mbg.CityWeather">
        insert into city_weather (area_code, date, temp_day, temp_night)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.areaCode,jdbcType=VARCHAR}, #{item.date,jdbcType=DATE}, #{item.tempDay,jdbcType=VARCHAR},
            #{item.tempNight,jdbcType=VARCHAR})
        </foreach>
        ON DUPLICATE KEY
        UPDATE
        temp_day =
        VALUES (temp_day), temp_night =
        VALUES (temp_night),
        update_time = now()
    </insert>
</mapper>